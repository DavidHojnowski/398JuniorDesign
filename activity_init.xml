<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.memes.dank.smarthouse.Init"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/Connect_Button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="connectToSmartHouse"
        android:text="@string/Connect_Button"
        android:visibility="visible"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/I.P_Input"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/Debug_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="DEBUG"
        android:layout_marginBottom="32dp"
        android:text="@string/Debug_Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1" />

    <EditText
        android:id="@+id/I.P_Input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="128dp"
        android:digits="0123456789."
        android:ems="10"
        android:hint="@string/I.P_Input"
        android:inputType="number"
        android:selectAllOnFocus="true"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
